<h1>Major Appointment</h1>
<table class="table">
	<thead>
	<tr>
		<th>AppointmentReason</th>
		<th>Location</th>
		<th>Date</th>
		<th>Patient</th>
		<th>Doctor</th>
		<th>Status</th>
		<th>Treatments</th>
	</tr>
	</thead>
	<tbody>
		@foreach(var appointmentItem in Model)
		{
			<tr>
				<td>@appointmentItem.Location</td>
				<td>@appointmentItem.Date.ToString()</td>
				<td>@appointmentItem.Patient</td>
				<td>@appointmentItem.Doctor</td>
				<td>@appointmentItem.Status</td>
				<td>@appointmentItem.Treatments</td>
				<td>
					@if (appointmentItem.AppointmentReason != null || appointmentItem.AppointmentReason != "")
					{
						@(appointmentItem.AppointmentReson)
					} else
					{
						@("Motivo da consulta não especificado.")
					}
				</td>
			</tr>
		}
	</tbody>
</table>
